---
import ScrollArea from "@/components/ScrollArea.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Scroll Area Demo">
	<main class="container mx-auto px-4 py-8">
		<h1 class="mb-8 text-4xl font-bold">Scroll Area Component Demo</h1>

		<div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
			<!-- Basic Vertical Scroll -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">Basic Vertical Scroll</h2>
				<ScrollArea class="h-64 rounded-lg border border-gray-300">
					<div class="space-y-4 p-4">
						{
							Array.from({ length: 20 }, (_, i) => (
								<div class="rounded bg-blue-100 p-3">
									<h3 class="font-semibold">Item {i + 1}</h3>
									<p class="text-sm text-gray-600">
										This is some content for item {i + 1}. It demonstrates
										vertical scrolling with a custom scrollbar.
									</p>
								</div>
							))
						}
					</div>
				</ScrollArea>
			</div>

			<!-- Horizontal Scroll -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">Horizontal Scroll</h2>
				<ScrollArea class="h-32 rounded-lg border border-gray-300">
					<div class="flex space-x-4 p-4" style="width: max-content;">
						{
							Array.from({ length: 15 }, (_, i) => (
								<div class="min-w-48 rounded bg-green-100 p-4">
									<h3 class="font-semibold">Card {i + 1}</h3>
									<p class="text-sm text-gray-600">Horizontal scroll content</p>
								</div>
							))
						}
					</div>
				</ScrollArea>
			</div>

			<!-- Both Directions -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">Both Directions</h2>
				<ScrollArea class="h-48 rounded-lg border border-gray-300">
					<div class="p-4" style="width: max-content;">
						<div class="grid grid-cols-8 gap-4">
							{
								Array.from({ length: 80 }, (_, i) => (
									<div class="rounded bg-purple-100 p-2 text-center">
										<span class="text-xs">{i + 1}</span>
									</div>
								))
							}
						</div>
					</div>
				</ScrollArea>
			</div>

			<!-- Custom Styled -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">Custom Styled</h2>
				<ScrollArea
					class="h-64 rounded-lg border border-gray-300"
					scrollbarClass="bg-gray-200 rounded-full"
					thumbClass="bg-blue-500 rounded-full"
					scrollHideDelay={1000}
				>
					<div class="space-y-4 p-4">
						{
							Array.from({ length: 15 }, (_, i) => (
								<div class="rounded bg-yellow-100 p-3">
									<h3 class="font-semibold">Custom Item {i + 1}</h3>
									<p class="text-sm text-gray-600">
										This scroll area has custom styled scrollbars with a longer
										hide delay.
									</p>
								</div>
							))
						}
					</div>
				</ScrollArea>
			</div>

			<!-- RTL Support -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">RTL Support</h2>
				<ScrollArea class="h-48 rounded-lg border border-gray-300" dir="rtl">
					<div
						class="flex space-x-4 p-4 rtl:space-x-reverse"
						style="width: max-content;"
					>
						{
							Array.from({ length: 12 }, (_, i) => (
								<div class="min-w-48 rounded bg-red-100 p-4">
									<h3 class="font-semibold">RTL Card {i + 1}</h3>
									<p class="text-sm text-gray-600">Right-to-left content</p>
								</div>
							))
						}
					</div>
				</ScrollArea>
			</div>

			<!-- Hidden Scrollbar -->
			<div class="space-y-4">
				<h2 class="text-2xl font-semibold">Hidden Scrollbar</h2>
				<ScrollArea
					class="h-48 rounded-lg border border-gray-300"
					hideScrollbar={true}
				>
					<div class="space-y-4 p-4">
						{
							Array.from({ length: 12 }, (_, i) => (
								<div class="rounded bg-gray-100 p-3">
									<h3 class="font-semibold">Hidden Scrollbar Item {i + 1}</h3>
									<p class="text-sm text-gray-600">
										This scroll area has no visible scrollbar but still supports
										scrolling.
									</p>
								</div>
							))
						}
					</div>
				</ScrollArea>
			</div>
		</div>

		<!-- Usage Examples -->
		<div class="mt-12 space-y-6">
			<h2 class="text-3xl font-bold">Usage Examples</h2>

			<div class="rounded-lg bg-gray-50 p-6">
				<h3 class="mb-4 text-xl font-semibold">Basic Usage</h3>
				<pre
					class="overflow-x-auto rounded bg-gray-800 p-4 text-green-400"><code>&lt;ScrollArea class="h-64"&gt;
  &lt;div class="p-4"&gt;
    &lt;!-- Your content here --&gt;
  &lt;/div&gt;
&lt;/ScrollArea&gt;</code></pre>
			</div>

			<div class="rounded-lg bg-gray-50 p-6">
				<h3 class="mb-4 text-xl font-semibold">With Custom Styling</h3>
				<pre
					class="overflow-x-auto rounded bg-gray-800 p-4 text-green-400"><code>&lt;ScrollArea 
  class="h-64 border rounded"
  scrollbarClass="bg-blue-200"
  thumbClass="bg-blue-600"
  scrollHideDelay={800}
&gt;
  &lt;div class="p-4"&gt;
    &lt;!-- Your content here --&gt;
  &lt;/div&gt;
&lt;/ScrollArea&gt;</code></pre>
			</div>

			<div class="rounded-lg bg-gray-50 p-6">
				<h3 class="mb-4 text-xl font-semibold">RTL Support</h3>
				<pre
					class="overflow-x-auto rounded bg-gray-800 p-4 text-green-400"><code>&lt;ScrollArea 
  class="h-64"
  dir="rtl"
&gt;
  &lt;div class="p-4"&gt;
    &lt;!-- RTL content here --&gt;
  &lt;/div&gt;
&lt;/ScrollArea&gt;</code></pre>
			</div>

			<div class="rounded-lg bg-gray-50 p-6">
				<h3 class="mb-4 text-xl font-semibold">Hidden Scrollbar</h3>
				<pre
					class="overflow-x-auto rounded bg-gray-800 p-4 text-green-400"><code>&lt;ScrollArea 
  class="h-64"
  hideScrollbar={true}
&gt;
  &lt;div class="p-4"&gt;
    &lt;!-- Content with invisible scrollbar --&gt;
  &lt;/div&gt;
&lt;/ScrollArea&gt;</code></pre>
			</div>
		</div>

		<!-- Features List -->
		<div class="mt-12">
			<h2 class="mb-6 text-3xl font-bold">Features</h2>
			<div class="grid grid-cols-1 gap-4 md:grid-cols-2">
				<div class="rounded-lg bg-blue-50 p-4">
					<h3 class="font-semibold text-blue-800">✅ Native Scrolling</h3>
					<p class="text-sm text-blue-700">
						Uses native browser scrolling, no CSS transformations
					</p>
				</div>
				<div class="rounded-lg bg-green-50 p-4">
					<h3 class="font-semibold text-green-800">✅ Hover Behavior</h3>
					<p class="text-sm text-green-700">
						Scrollbars appear on hover and disappear after delay
					</p>
				</div>
				<div class="rounded-lg bg-purple-50 p-4">
					<h3 class="font-semibold text-purple-800">✅ RTL Support</h3>
					<p class="text-sm text-purple-700">
						Full right-to-left language support
					</p>
				</div>
				<div class="rounded-lg bg-orange-50 p-4">
					<h3 class="font-semibold text-orange-800">✅ Customizable</h3>
					<p class="text-sm text-orange-700">
						Style scrollbars and thumbs with CSS classes
					</p>
				</div>
				<div class="rounded-lg bg-red-50 p-4">
					<h3 class="font-semibold text-red-800">✅ Accessible</h3>
					<p class="text-sm text-red-700">
						Proper ARIA attributes and keyboard support
					</p>
				</div>
				<div class="rounded-lg bg-indigo-50 p-4">
					<h3 class="font-semibold text-indigo-800">✅ Responsive</h3>
					<p class="text-sm text-indigo-700">
						Automatically adjusts to content changes
					</p>
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
