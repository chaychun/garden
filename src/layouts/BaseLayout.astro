---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en" class="bg-base-50 antialiased">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸŒ±</text></svg>"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<Font cssVariable="--font-switzer" preload />
		<Font cssVariable="--font-cabinet" preload />
		<Font cssVariable="--font-tabular" preload />

		<ClientRouter />
	</head>
	<body>
		<slot />

		<script>
			function stripFilterParamIfNotHome() {
				if (typeof window === "undefined") return;
				if (window.location.pathname === "/") return;
				const url = new URL(window.location.href);
				if (!url.searchParams.has("filter")) return;
				url.searchParams.delete("filter");
				const newSearch = url.searchParams.toString();
				const newUrl = url.pathname + (newSearch ? `?${newSearch}` : "") + url.hash;
				window.history.replaceState({}, "", newUrl);
			}

			document.addEventListener("DOMContentLoaded", stripFilterParamIfNotHome);
			document.addEventListener("astro:page-load", stripFilterParamIfNotHome);
		</script>
	</body>
</html>
