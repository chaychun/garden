---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<div class="min-h-screen space-y-8 p-8">
		<h1 class="font-sans text-8xl font-bold text-gray-900">
			Switzer Font Test
		</h1>

		<h2
			class="text-6xl font-bold text-gray-800"
			style="font-family: var(--font-cabinet);"
		>
			Cabinet Font Test
		</h2>

		<p class="font-sans text-2xl text-gray-600">
			This text uses Switzer (default sans font)
		</p>

		<p class="text-2xl text-gray-600" style="font-family: var(--font-cabinet);">
			This text uses Cabinet Grotesk
		</p>

		<!-- Navigation to view transition test pages -->
		<div class="mt-12 p-8 bg-white rounded-xl shadow-lg">
			<h3 class="text-3xl font-bold text-gray-800 mb-6">View Transitions Test</h3>
			<div class="flex gap-4">
				<a 
					href="/page1" 
					class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors"
				>
					Go to Page 1
				</a>
				<a 
					href="/page2" 
					class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors"
				>
					Go to Page 2
				</a>
			</div>
			<p class="mt-4 text-gray-600">
				Navigate between these pages to test Astro view transitions with morph animations and persistent video elements.
			</p>
		</div>

		<!-- Scroll Area Component Demo -->
		<div class="mt-8 p-8 bg-white rounded-xl shadow-lg">
			<h3 class="text-3xl font-bold text-gray-800 mb-6">Scroll Area Component</h3>
			<div class="flex gap-4">
				<a 
					href="/scroll-demo" 
					class="inline-block bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors"
				>
					View Scroll Area Demo
				</a>
			</div>
			<p class="mt-4 text-gray-600">
				Check out the new accessible scroll wrapper component with custom scrollbars, hover behavior, and RTL support.
			</p>
		</div>
	</div>
</BaseLayout>
