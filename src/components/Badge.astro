---
export interface Props {
	text: string;
	class?: string;
}
const { text, class: className = "" } = Astro.props;
---

<span
	class:list={[
		"inline-block border border-white/30 px-3 py-1 font-mono text-[10px] text-white transition-colors duration-200 select-none hover:border-transparent hover:bg-white/30",
		className,
	]}
>
	{text}
</span>
