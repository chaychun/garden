---
import TransitionLayout from "../layouts/TransitionLayout.astro";
---

<TransitionLayout>
	<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 p-6">
		<nav class="mb-4">
			<a 
				href="/page1" 
				class="inline-block bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors"
			>
				Navigate to Page 1
			</a>
		</nav>

		<main class="max-w-6xl mx-auto space-y-4">
			<!-- Header -->
			<header class="text-center">
				<h1 
					transition:name="page-title"
					class="text-4xl font-bold text-gray-900 mb-2"
				>
					Page 2 - View Transitions Test
				</h1>
				<p 
					transition:name="page-subtitle"
					class="text-lg text-gray-600"
				>
					Different content with matching transition names
				</p>
			</header>

			<!-- Video section with transition:persist at the top -->
			<section class="bg-white rounded-xl p-6 shadow-lg">
				<h2 
					transition:name="video-title"
					class="text-2xl font-bold text-gray-800 mb-4"
				>
					Persistent Video (Continued)
				</h2>
				<div class="flex items-center gap-6">
					<video 
						transition:persist
						controls
						class="w-80 h-48 object-cover rounded-lg bg-gray-200"
						poster="https://picsum.photos/320/192?random=2"
					>
						<source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4" type="video/mp4">
						Your browser does not support the video tag.
					</video>
					<div>
						<p 
							transition:name="video-description"
							class="text-gray-700 leading-relaxed"
						>
							This is the same video from Page 1! It continues playing during the transition thanks to 
							<code>transition:persist</code>. The video state is preserved.
						</p>
					</div>
				</div>
			</section>

			<!-- Content cards with different layout -->
			<section class="grid grid-cols-1 md:grid-cols-3 gap-4">
				<div 
					transition:name="card-1"
					class="bg-white rounded-xl p-4 shadow-lg"
				>
					<h3 
						transition:name="card-1-title"
						class="text-xl font-bold text-gray-800 mb-2"
					>
						Updated Card 1
					</h3>
					<p 
						transition:name="card-1-content"
						class="text-gray-600 text-sm"
					>
						This card has been updated with new content and will morph smoothly.
					</p>
					<div 
						transition:name="card-1-badge"
						class="mt-3 inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium"
					>
						Updated
					</div>
				</div>

				<div 
					transition:name="card-2"
					class="bg-white rounded-xl p-4 shadow-lg"
				>
					<h3 
						transition:name="card-2-title"
						class="text-xl font-bold text-gray-800 mb-2"
					>
						New Card 2
					</h3>
					<p 
						transition:name="card-2-content"
						class="text-gray-600 text-sm"
					>
						This card now has different content but maintains the same transition name.
					</p>
					<div 
						transition:name="card-2-badge"
						class="mt-3 inline-block bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-medium"
					>
						Hot
					</div>
				</div>

				<div class="bg-white rounded-xl p-4 shadow-lg">
					<h3 class="text-xl font-bold text-gray-800 mb-2">
						New Card 3
					</h3>
					<p class="text-gray-600 text-sm">
						This is a completely new card without a transition name, so it will fade in normally.
					</p>
					<div class="mt-3 inline-block bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium">
						New
					</div>
				</div>
			</section>

			<!-- Compact list section with different items -->
			<section class="bg-white rounded-xl p-4 shadow-lg">
				<h2 
					transition:name="list-title"
					class="text-2xl font-bold text-gray-800 mb-3"
				>
					Updated List Items
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-4 gap-3">
					<div 
						transition:name="list-item-1"
						class="flex items-center gap-2 p-2 bg-gray-50 rounded-lg"
					>
						<span class="w-2 h-2 bg-red-500 rounded-full"></span>
						<span class="text-gray-700 text-sm">Updated item 1</span>
					</div>
					<div 
						transition:name="list-item-2"
						class="flex items-center gap-2 p-2 bg-gray-50 rounded-lg"
					>
						<span class="w-2 h-2 bg-yellow-500 rounded-full"></span>
						<span class="text-gray-700 text-sm">Updated item 2</span>
					</div>
					<div 
						transition:name="list-item-3"
						class="flex items-center gap-2 p-2 bg-gray-50 rounded-lg"
					>
						<span class="w-2 h-2 bg-pink-500 rounded-full"></span>
						<span class="text-gray-700 text-sm">Updated item 3</span>
					</div>
					<div class="flex items-center gap-2 p-2 bg-gray-50 rounded-lg">
						<span class="w-2 h-2 bg-indigo-500 rounded-full"></span>
						<span class="text-gray-700 text-sm">New item 4</span>
					</div>
				</div>
			</section>
		</main>
	</div>
</TransitionLayout>